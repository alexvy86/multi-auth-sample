# By default, auto detect text files and perform LF normalization

* text=auto

#######################################################

# .NET

# Source files
*.cs     text diff=csharp
*.cshtml text diff=csharp

# Project files
*.sln        text eol=crlf
*.csproj     text eol=crlf
*.vbproj     text eol=crlf
*.vcxproj    text eol=crlf
*.vcproj     text eol=crlf
*.dbproj     text eol=crlf
*.fsproj     text eol=crlf
*.lsproj     text eol=crlf
*.wixproj    text eol=crlf
*.modelproj  text eol=crlf
*.sqlproj    text eol=crlf
*.wmaproj    text eol=crlf

*.xproj      text eol=crlf
*.props      text eol=crlf
*.filters    text eol=crlf
*.vcxitems   text eol=crlf

#######################################################

# PYTHON

# Source files
*.pxd    text diff=python
*.py     text diff=python
*.py3    text diff=python
*.pyw    text diff=python
*.ipynb  text
*.pyx    text diff=python

# Binary files
*.db     binary
*.p      binary
*.pkl    binary
*.pickle binary
*.pyc    binary
*.pyd    binary
*.pyo    binary

# Note: .db, .p, and .pkl files are associated
# with the python modules "pickle", "dbm.*"",
# "shelve", "marshal", "anydbm", & "bsddb"
# (among others).

#######################################################

# OTHERS

# Text files
*.html text diff=html
*.css  text
*.js   text
*.ts   text
*.sql  text

# Image files
*.[jJ][pP][gG]       binary
*.[jJ][pP][eE][gG]   binary
*.[pP][nN][gG]       binary
*.[gG][iI][fF]       binary
*.[iI][cC][oO]       binary

# Other binary files
*.[pP][dD][fF]      binary
*.[tT][tT][fF]      binary
*.[eE][oO][tT]      binary
*.[wW][oO][fF][fF]  binary
*.[wW][mM][vV]      binary
*.[zZ][iI][pP]      binary
*.[eE][xX][eE]      binary
*.[dD][bB]          binary
